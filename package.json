{
	"name": "@raythurnevoid/node-colorful-log",
	"version": "0.2.18",
	"description": "",
	"scripts": {
		"env": "cross-env TS_NODE_PROJECT=\"tsconfig.json\"",
		"clean-lib": "del-cli lib/*",
		"copy:package:cjs": "copyfiles --up 1 cjs/* lib/cjs",
		"copy:package": "copyfiles package.json lib",
		"copy:src": "copyfiles src/lib/**/* lib/src --exclude **/*.test.ts --up 2",
		"copy:cjs": "copyfiles src/lib/**/* lib/cjs --exclude **/*.ts --up 2",
		"copy": "copyfiles src/lib/**/* lib --exclude **/*.ts --up 2",
		"tsc:cjs": "tsc -p tsconfig.lib.cjs.json",
		"tsc": "tsc -p tsconfig.lib.json",
		"build-lib": "npm-run-all --parallel copy:package copy:package:cjs copy copy:cjs copy:src tsc tsc:cjs",
		"lib": "npm run clean-lib && npm run build-lib",
		"dev": "npm run clean-lib && nodemon --watch src -e ts --exec \"npm run build-lib\"",
		"package": "npm run lib && npm publish ./lib --access public",
		"ts-node": "npm run env -- node -r ts-node/register -r tsconfig-paths/register --loader ts-node/esm --",
		"ts-node:inspect": "npm run ts-node -- --inspect --",
		"start": "npm run ts-node src/index.ts",
		"debug": "npm run ts-node:inspect src/index.ts",
		"test": "jest"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./browser.js",
			"require": "./cjs/browser.js"
		},
		"./browser": {
			"import": "./browser.js",
			"require": "./cjs/browser.js"
		},
		"./node": {
			"import": "./node.js",
			"require": "./cjs/node.js"
		},
		"./types": {
			"import": "./types.js",
			"require": "./cjs/types.js"
		},
		"./cjs/*": "./cjs/*"
	},
	"sideEffects": false,
	"browserslist": [
		"> 5% or node >= 16"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raythurnevoid/node-colorful-log.git"
	},
	"author": "Ray Thurne",
	"license": "ISC",
	"dependencies": {
		"chalk": "^4.1.2"
	},
	"devDependencies": {
		"@raythurnevoid/ts-node-template": "^0.2.1",
		"@types/jest": "^27.0.3",
		"jest": "^27.4.3",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"ts-jest": "^27.0.7",
		"nodemon": "^2.0.15"
	}
}
