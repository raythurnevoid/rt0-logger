{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"node",
			"vitest/importMeta"
		]
	},
	"include": [
		"./src",
	],
	"typedocOptions": {
		"entryPoints": [
			"./src/lib/browser.ts",
			"./src/lib/node.ts",
			"./src/lib/utils.ts",
			"./src/lib/types.ts"
		],
		"out": "docs"
	}
}