{
	"name": "@raythurnevoid/rt0-logger",
	"version": "2.0.0",
	"description": "",
	"scripts": {
		"dev": "vite-node --script --watch ./src/index.ts",
		"dev:inspect": "node --inspect-brk ./node_modules/vite-node/vite-node.mjs --script --watch ./src/index.ts",
		"build": "vite build",
		"preview": "node ./dist/index.js",
		"lib": "npm run build && npm run lib:copy",
		"lib:copy": "copyfiles ./package.json dist",
		"package": "npm run lib && npm publish ./dist",
		"test": "vitest"
	},
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./browser": {
			"import": "./browser.js"
		},
		"./node": {
			"import": "./node.js"
		},
		"./types": {
			"import": "./types.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raythurnevoid/rt0-logger.git"
	},
	"author": "Ray Thurne",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^18.13.0",
		"chalk": "^5.2.0",
		"copyfiles": "^2.4.1",
		"rollup-plugin-dts": "^5.2.0",
		"typescript": "4.9.5",
		"vite": "^4.1.1",
		"vite-node": "^0.28.5",
		"vite-plugin-dts": "^1.7.3",
		"vitest": "^0.28.5"
	}
}
