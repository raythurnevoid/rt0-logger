{
	"name": "@raythurnevoid/rt0-logger",
	"version": "2.1.0",
	"description": "",
	"scripts": {
		"dev": "vite-node --watch ./src/index.ts",
		"dev:inspect": "node --inspect-brk ./node_modules/vite-node/vite-node.mjs --watch ./src/index.ts",
		"build": "vite build",
		"preview": "node ./dist/index.js",
		"lib": "npm run build && npm run lib:copy",
		"lib:copy": "copyfiles ./package.json dist",
		"package": "npm run build && copyfiles ./package.json dist && publint ./dist",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest"
	},
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./browser": "./browser.js",
		"./node": "./node.js",
		"./utils": "./utils.js",
		"./types": "./types.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raythurnevoid/rt0-logger.git"
	},
	"author": "Ray Thurne",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^18.15.3",
		"chalk": "^5.2.0",
		"copyfiles": "^2.4.1",
		"rollup-plugin-dts": "^5.3.0",
		"typescript": "5.0.2",
		"vite": "^4.2.0",
		"vite-node": "^0.29.3",
		"vite-plugin-dts": "^2.1.0",
		"vitest": "^0.29.3"
	}
}
